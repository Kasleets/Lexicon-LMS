@page "/{CourseId:guid}/activity/{ActivityId:guid}"
<div class="custom-widthtwo">
<h3 class="text-center">Activity</h3>

@if(ActivityDto == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <a href="@($"activityedit/{ActivityId}")" class="btn btn-primary">Edit</a>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @ActivityDto.Name
            </dt>
            <dd class="col-sm-10">
                @ActivityDto.Description
            </dd>
            <dt class="col-sm-2">
                Start time
            </dt>
            <dd class="col-sm-10">
                @ActivityDto.StartTime
            </dd>
            <dt class="col-sm-2">
                End time
            </dt>
            <dd class="col-sm-10">
                @ActivityDto.EndTime
            </dd>
            <dt class="col-sm-2">
                Type
            </dt>
            <dd class="col-sm-10">
                @ActivityDto.TypeName
            </dd>
        </dl>
    </div>
}
</div>