@page "/CourseAdd"
@layout AdminLayout

<div class="container">
    <main role="main" class="pb-1">
        <div>
            <div class="row">
                <div class="col-md-9">
                    
                    <h3>Add Course</h3>
                        <div class="row">
                            <div class="col-md-6">

                                <EditForm Model="@_courseToAdd" OnValidSubmit="@HandleValidSubmit">
                                    <DataAnnotationsValidator/>

                                    <div class="form-group">
                                        <label for="Name">Name:</label>
                                        <InputText maxlength="30" id="Name" @bind-Value="_courseToAdd!.Name" class="form-control"/>
                                        <ValidationMessage For="@(() => _courseToAdd!.Name)"/>
                                    </div>

                                    <div class="form-group description-height">
                                        <label for="Description">Description:</label>
                                        <textarea maxlength="100" id="Description" @bind="_courseToAdd!.Description" class="form-control"></textarea>
                                        <ValidationMessage For="@(() => _courseToAdd.Description)"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="StartDate">Start Date:</label>
                                        <InputDate id="StartDate" @bind-Value="_courseToAdd.StartDate" class="form-control"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="EndDate">End Date:</label>
                                        <InputDate id="EndDate" @bind-Value="_courseToAdd.EndDate" class="form-control"/>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success">Add Course</button>
                                        <a class="btn btn-primary" href="@("/courses")">Overview Courses</a>
                                    </div>

                                </EditForm>

                            </div>
                        </div>                 
                </div>
            </div>
        </div>
    </main>
</div>
